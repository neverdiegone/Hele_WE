<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_scheduler_start_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_register_book"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/item_scheduler_end_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_scheduler_start_at"
        android:layout_toLeftOf="@+id/btn_register_book"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/btn_register_book"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bacground_booking_class"
        android:gravity="center"
        android:text="Đăng ký"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_scheduler_end_at"
        android:layout_marginTop="3dp"
        android:background="@color/grey_500" />
</RelativeLayout>